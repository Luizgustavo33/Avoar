@model Agence3.Models.Promoções

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Promoções</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDPromoc" />
            <div class="form-group">
                <label asp-for="IDviagem" class="control-label"></label>
                <select asp-for="IDviagem" class="form-control" asp-items="ViewBag.IDviagem"></select>
                <span asp-validation-for="IDviagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preço_desconto" class="control-label"></label>
                <input asp-for="Preço_desconto" class="form-control" />
                <span asp-validation-for="Preço_desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-secondary">Voltar para lista</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
